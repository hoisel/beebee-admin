{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2016", 
      "dom"
    ],
    // "mapRoot": "./",
    "module": "es6",
    "baseDir":"./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": false,
    "noImplicitThis" : true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters" : false
  }
}

