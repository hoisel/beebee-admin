{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "beebee-front"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        "mocks"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../node_modules/bootstrap/dist/css/bootstrap.min.css",
        "../node_modules/font-awesome/css/font-awesome.min.css",
        "../node_modules/pace/themes/yellow/pace-theme-flash.css",
        "assets/beebee/css/pace-theme-flash-overrides.css",
        "assets/beebee/css/styles.css",
        "assets/beebee/css/theme.css",
        "assets/icomoon/style.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/bootstrap/dist/js/bootstrap.min.js",
        "../node_modules/swiper/dist/js/swiper.jquery.min.js",
        "../node_modules/twitter-bootstrap-wizard/jquery.bootstrap.wizard.min.js",
        "../node_modules/pace/pace.js",
        "assets/beebee/js/library.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {
      "inlineTemplate": false,
      "inlineStyle": false,
      "spec": true,
      "flat": false,
      "prefix": false,
      "viewEncapsulation": "Emulated",
      "changeDetection": "Default",
      "export": true
    },
    "directive": {
      "spec": true,
      "flat": false,
      "prefix": false,
      "export": true,
      "module": true
    },
    "pipe": {
      "spec": true,
      "flat": false,
      "export": true,
      "module": true
    },
    "class": {
      "spec": true
    },
    "module": {
      "spec": true,
      "flat": false,
      "routing": true
    },
    "service": {
      "spec": true,
      "flat": false,
      "module": true
    },
    "interface": {},
    "guard": {
      "spec": true,
      "flat": false,
      "module": true
    }
  }
}